{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "9797275049106619153"
    }
  },
  "parameters": {
    "functionAppName": {
      "type": "string",
      "metadata": {
        "description": "The name of the function app"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location for the function app"
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "The storage account name for function app storage"
      }
    },
    "managedIdentityId": {
      "type": "string",
      "metadata": {
        "description": "The managed identity resource ID"
      }
    },
    "managedIdentityClientId": {
      "type": "string",
      "metadata": {
        "description": "The managed identity client ID"
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "The key vault name for secrets"
      }
    },
    "webAppUrl": {
      "type": "string",
      "metadata": {
        "description": "The web app URL for CORS configuration"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags to apply to the function app"
      }
    }
  },
  "variables": {
    "functionAppPlanName": "[format('{0}-plan', parameters('functionAppName'))]",
    "functionRuntime": "node",
    "functionRuntimeVersion": "20"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-01-01",
      "name": "[variables('functionAppPlanName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Y1",
        "tier": "Dynamic"
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-01-01",
      "name": "[parameters('functionAppName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "kind": "functionapp,linux",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[format('{0}', parameters('managedIdentityId'))]": {}
        }
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('functionAppPlanName'))]",
        "reserved": true,
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "[format('{0}|{1}', variables('functionRuntime'), variables('functionRuntimeVersion'))]",
          "appSettings": [
            {
              "name": "AzureWebJobsStorage__accountName",
              "value": "[parameters('storageAccountName')]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING__accountName",
              "value": "[parameters('storageAccountName')]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "[variables('functionRuntime')]"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "[format('~{0}', variables('functionRuntimeVersion'))]"
            },
            {
              "name": "AZURE_CLIENT_ID",
              "value": "[parameters('managedIdentityClientId')]"
            },
            {
              "name": "USE_MANAGED_IDENTITY",
              "value": "true"
            },
            {
              "name": "KEY_VAULT_NAME",
              "value": "[parameters('keyVaultName')]"
            },
            {
              "name": "STORAGE_ACCOUNT_NAME",
              "value": "[parameters('storageAccountName')]"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "1"
            }
          ],
          "cors": {
            "allowedOrigins": [
              "[parameters('webAppUrl')]",
              "https://portal.azure.com"
            ],
            "supportCredentials": true
          },
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('functionAppPlanName'))]"
      ]
    }
  ],
  "outputs": {
    "functionAppId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
    },
    "functionAppName": {
      "type": "string",
      "value": "[parameters('functionAppName')]"
    },
    "functionAppDefaultHostName": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('functionAppName')), '2023-01-01').defaultHostName]"
    }
  }
}